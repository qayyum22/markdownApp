{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "types": ["react", "react-dom"]
  },
  "include": ["main.ts", "preload.ts", "fileUtils.ts", "src/**/*"]
}

