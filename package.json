{
  "name": "MarkdownApp",
  "version": "1.0.0",
  "description": "MarkdownApp - Electron + React Markdown Editor",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -k \"vite\" \"npm:electron-dev\"",
    "electron-dev": "electron -r ts-node/register ./main.ts",
    "build": "npm run build-main && npm run build-renderer && electron-builder",
    "build-main": "tsc -p . --outDir dist && cp -r public dist/public",
    "build-renderer": "vite build"
  },
  "build": {
    "appId": "com.example.markdownapp",
    "productName": "MarkdownApp",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "remark-gfm": "^3.0.1"
  }
}
